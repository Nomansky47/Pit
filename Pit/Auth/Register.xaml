        <TextBox Background="LightGray" HorizontalAlignment="Left" Height="40" Margin="400,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="328" x:Name="Nname"/>
        <TextBox Background="LightGray" HorizontalAlignment="Left" Height="38" Margin="400,228,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="328" x:Name="ThirdName" RenderTransformOrigin="0.486,0.101"/>
