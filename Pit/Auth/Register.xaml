        <TextBlock TextAlignment="Center" HorizontalAlignment="Left" Height="27" Margin="400,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328"><Run Language="ru-ru" Text="Имя"/></TextBlock>
        <TextBlock TextAlignment="Center" HorizontalAlignment="Left" Height="27" Margin="400,191,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="328"><Run Language="ru-ru" Text="Отчество"/></TextBlock>
